// tsconfig.es5.json
{
    "compilerOptions": {
      "target": "ES5",
      "lib": [
        "ES2020",
        "DOM"
      ],
      "declaration": true,
      "allowSyntheticDefaultImports": true,
      "types": [
        "vitest/importMeta"
      ],
      "moduleResolution": "node"
    },
    "exclude": [
      "src/**/*.test.ts",
    ],
    "include": [
      "src/**/*"
    ]
  }
  